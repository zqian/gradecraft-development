.small-12.panel.mainContent

  = content_nav_for Course

  .small-12.medium-9
    %h3.pagetitle= @title

  .small-12.medium-3.right.columns
    .button-bar.right
      %ul.button-group.context_menu
        %li
          %i.fi-plus
          = link_to "New Course", new_course_path

  .small-12.columns
    %table.responsive.nosearch_dynatable
      %thead
        %tr
          %th Name
          %th Course No
          %th Year
          %th Semester
          %th Badges
          %th Total Points
          %th
      %tbody
        - @courses.each do |course|
          %tr
            %td= link_to course.name, course
            %td= course.courseno
            %td= course.year
            %td= course.semester
            %td
            %td= points course.total_points
            - if current_user_is_admin?
              %td
                - if course == current_course
                  = link_to_unless_current "Export Grades for Research", research_gradebook_path, :class=>"data-clearing"

            %td
              .button-bar
                %ul.button-group.round.right
                  %li= link_to 'Edit', edit_course_path(course), :class => 'button'
                  %li= link_to 'Delete', course, :class => 'button', :data => { confirm: 'Are you sure?' }, :method => :delete
                  %li= link_to "Copy", copy_courses_path(:id => current_course), :class => 'button', :method => :copy