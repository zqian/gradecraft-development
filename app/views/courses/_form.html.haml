= simple_form_for(@course, :validate => false)  do |f|
  .panel
    %h4.bold The Basics
    .small-12.large-4.columns.right
      .panel.callout.radius
        .small-12
          %label.checkbox{ :for => "use_timeline" }
            = f.label :use_timeline, "Timeline"
            = f.check_box :use_timeline
            .form_label Would you like to use the interactive timeline to display your syllabus?

        .small-12
          %label.checkbox{ :for => "accepts_submissions" }
            = f.label :accepts_submissions, "Assignment Submissions"
            = f.check_box :accepts_submissions
            .form_label Will you be using GradeCraft to accept assignment submissions?

        .small-12
          %label.checkbox{ :for => "predictor_setting" }
            = f.label :predictor_setting, "Grade Predictor"
            = f.check_box :predictor_setting
            .form_label The grade predictor is a tab on the student dashboard where students can plan out their course work and estimate their grade.

        .small-12
          %label.checkbox{ :for => "team_setting" }
            = f.label :team_setting, "Sections"
            = f.check_box :team_setting
            .form_label  Will you have semester-long sections in your course?
        
        .small-12
          %label.checkbox{ :for => "badge_setting" }
            = f.label :badge_setting, "Badges"
            = f.check_box :badge_setting
            .form_label Do you want to use badges in your course?

        - if current_user.is_admin?
          .small-12
            %label.checkbox{ :for => "status" }
              = f.label :status, "Active?"
              = f.check_box :status
              .form_label Is this an active course?


      .panel.callout.radius

        .small-12
          = f.label :office, "Professor's Office"
          = f.text_field :office

        .small-12
          = f.label :phone, "Contact Phone #"
          = f.text_field :phone

        .small-12
          = f.label :class_email, "Class Email"
          = f.text_field :class_email

        .small-12
          = f.label :twitter_handle, "Twitter Handle"
          = f.text_field :twitter_handle

        .small-12
          = f.label :twitter_hashtag, "Hashtag"
          = f.text_field :twitter_hashtag

        .small-12
          = f.label :location, "Location"
          = f.text_field :location

        .small-12
          = f.label :office_hours, "Office Hours"
          = f.text_field :office_hours

        .small-12
          = f.label :meeting_times, "Class Meeting Times"
          = f.text_field :meeting_times

    .small-12.large-5.columns
      = f.label :name, "Course Title"
      = f.text_field :name
    
    .small-12.large-3.columns
      = f.label :courseno, "Course Number"
      = f.text_field :courseno

    .small-12.large-5.columns
      = f.label :tagline, "Tagline"
      = f.text_field :tagline
    
    .small-12.large-3.columns
      = f.label :point_total, "Maximum Number of Points"
      = f.number_field :point_total
      .form_label If you leave this blank, GradeCraft will calculate the total number of points based on the assignments you create.

    .small-12.large-4.columns
      = f.label :semester
      = f.select :semester, [["Winter", "winter"], ["Spring", "spring"], ["Summer", "summer"], ["Fall", "fall"]]

    .small-12.large-4.columns
      = f.label :year
      = f.select :year, (Date.today.year - 3)..(Date.today.year + 2)

    .small-12.large-4.columns
      = f.label :office, "Professor's Office"
      = f.text_field :office

    .clearfix

    .small-12.large-4.columns
      = f.label :phone, "Contact Phone #"
      = f.text_field :phone

    .small-12.large-4.columns
      = f.label :class_email, "Class Email"
      = f.text_field :class_email

    .small-12.large-4.columns
      = f.label :twitter_handle, "Twitter Handle"
      = f.text_field :twitter_handle

    .clearfix

    .small-12.large-4.columns
      = f.label :twitter_hashtag, "Hashtag"
      = f.text_field :twitter_hashtag

    .small-12.large-4.columns
      = f.label :location, "Location"
      = f.text_field :location

    .small-12.large-4.columns
      = f.label :office_hours, "Office Hours"
      = f.text_field :office_hours

    .clearfix

    .small-12.large-4.columns
      = f.label :meeting_times, "Class Meeting Times"
      = f.text_field :meeting_times

    .small-12.large-4.columns
      = f.label :point_total, "Maximum Number of Points"
      = f.number_field :point_total
      .form_label If you leave this blank, GradeCraft will calculate the total number of points based on the assignments you create.

    .clearfix

    .small-12.large-4.columns
      = f.label :assignment_term, "Assignment Term"
      = f.text_field :assignment_term
      .form_label Would you like to call assignments something else?


    .small-12.large-4.columns
      %label.checkbox{ :for => "accepts_submissions" }
        = f.label :accepts_submissions, "Assignment Submissions"
        = f.check_box :accepts_submissions
        .form_label Will you be using GradeCraft to accept assignment submissions?

    .clearfix

    .small-12.textarea
      = f.bootsy_area :grading_philosophy
      .form_label What would you like to tell students about how they should expected to be graded?

    .clearfix

  .panel
    %h4 BADGES
    %hr
    .small-12.large-4.columns
      = f.input :badge_setting, :label => "Badges"
      .form_label Do you want to use badges in your course?

    .small-12.large-4.columns
      = f.label :badge_term, "Badge Term"
      = f.text_field :badge_term
      .form_label Would you like to call badges something else?

    .small-12.large-4.columns
      = f.input :shared_badges, :label => "Social Badges"
      .form_label Students can share badges with the class

    .clearfix

    .small-12.large-4.columns
      = f.input :badges_value, :label =>"Attach points to badges."


    .clearfix
