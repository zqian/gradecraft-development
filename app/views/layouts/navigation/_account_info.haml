%li.has-dropdown.show-for-medium-up{:role => "navigation", "aria-labeledby" => "user-profile-navigation", "title" => "Navigation to user profile and log out"}
  %a
    - if current_user.avatar_file_name.present?
      %img.img-rounded{:src => current_user.avatar_file_name, :width => 30, :height => 30} 
    = current_user.public_name
  %ul.dropdown
    %li= link_to "My Account", edit_profile_users_path
    %li= link_to "Logout", :logout
%li.show-for-small
  %h5= current_user.public_name
  %ul.dropdown
    %li= link_to "My Account", edit_profile_users_path
    %li= link_to "Logout", :logout